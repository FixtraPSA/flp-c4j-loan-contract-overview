<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<ViewSettingsDialog confirm="handleFilterDialogConfirm" resetFilters="handleFilterDialogReset">
		<filterItems>
			<ViewSettingsCustomItem id="iDVSTransactionsAmountMoreThan" text="Amount" key="AccountCurrencyAmount">
				<customControl>
					<f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4" emptySpanL="1" emptySpanM="1" columnsL="7"
						columnsM="7">
						<f:content id="idForm">
							<Label text="More Than"/>
							<Input id="idMorethanAmount" type="Number" placeholder="Enter a Amount ..." change="handleFilterInputChange"/>
							<Label text="Less Than"/>
							<Input id="idLessThanAmount" type="Number" placeholder="Enter a Amount ..." change="handleFilterInputChange"/>
							<Label text="Between"/>
							<Input id="idBTLess" type="Number" placeholder="Enter a Amount ..." change="handleFilterInputChange"/>
							<Input id="idBTBig" type="Number" placeholder="Enter a Amount ..." change="handleFilterInputChange"/>
						</f:content>
					</f:SimpleForm>
				</customControl>
			</ViewSettingsCustomItem>
			<ViewSettingsCustomItem id="iDVSTransactionsPostingDate" text="Posting date" key="PostingDate">
				<customControl>
					<f:SimpleForm id="idSFPostingDate" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4" emptySpanL="1" emptySpanM="1"
						columnsL="7" columnsM="7">
						<f:content id="idForm2">
							<Label text="Posting Date later than"/>
							<DatePicker id="DPstartDate" valueFormat="yyyyMMdd" displayFormat="yyyy-MM-dd" enabled="true" change="handleFilterInputChange"/>
						</f:content>
					</f:SimpleForm>
				</customControl>
			</ViewSettingsCustomItem>
			<ViewSettingsCustomItem id="iDVSTransactionsPaymentNote" text="Payment Note" key="PostingDate">
				<customControl>
					<f:SimpleForm id="idSFPaymentNote" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4" emptySpanL="1" emptySpanM="1"
						columnsL="7" columnsM="7">
						<f:content id="idForm3">
							<Label text="Payment Note Contains"/>
							<Input id="idPaymentNote" change="handleFilterInputChange"/>
						</f:content>
					</f:SimpleForm>
				</customControl>
			</ViewSettingsCustomItem>
		</filterItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>